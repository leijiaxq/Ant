<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/title"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/order_tl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabBackground="@drawable/ripple_item_white_bg"
        app:tabIndicatorColor="@color/ant_theme"
        app:tabSelectedTextColor="@color/ant_theme"
        app:tabTextColor="@color/text_black"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/order_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


</LinearLayout>